{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "build/src",
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}