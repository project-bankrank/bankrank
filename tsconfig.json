{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "outDir": "build/src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["src/", "scaffold.js"],
  "exclude": ["**/*.spec.ts"]
}
